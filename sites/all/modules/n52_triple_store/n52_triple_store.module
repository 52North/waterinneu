/**
 * Implement hook_help()
 */
function n52_triple_store_help($path, $arg) {
	
	if ($path === 'admin/help#n52_triple_store') {
		$output = '<h3>' . t('About') . '</h3>';
		$output .= '<p>' . t('The n52_triple_store module allows to request nodes from external sources.') . '</p>';
		return $output;
	}
	
}