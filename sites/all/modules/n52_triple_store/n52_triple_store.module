/**
 * Implements hook_menu()
 *
 * Link in default menu (e.g. Navigation)
 */
function n52_triple_store_menu() {
	$menu ['n52/triple-store'] = array (
			// page title
			'title' => 'Triple Store Content',
			'page callback' => 'n52_triple_store_callback',
			'access arguments' => array (
					'access content',
			),
	);
	return $menu;
}

