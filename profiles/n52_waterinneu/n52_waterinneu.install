/**
 * Implements hook_install().
 *
 * Performs actions to set up the site for this profile.
 *
 * @see system_install()
 */
function n52_waterinneu_install() {
	// Enable the themes.
	$default_theme = 'n52_wieu_theme';
	$admin_theme = 'adminial';
	db_update('system')
	->fields(array('status' => 1))
	->condition('type', 'theme')
	->condition('name', $admin_theme)
	->execute();
	variable_set('admin_theme', $admin_theme);
	
	db_update('system')
	->fields(array('status' => 1))
	->condition('type', 'theme')
	->condition('name', $default_theme)
	->execute();
	variable_set('theme_default', $default_theme);
	
	db_update('system')
	->fields(array('status' => 0))
	->condition('type', 'theme')
	->condition('name', 'seven')
	->execute();
	
	// enable modules that require the corresponding theme to be available	
	$modules_to_enable = array(
			'feature_configuration',
			'feature_events',
			'feature_helpdesk',
			'feature_i18n',
			'feature_search',
			'feature_service_requests_and_offerings',
			'waterinneu_feature_frontpage',
			'waterinneu_feature_harmony',
			'waterinneu_feature_menus',
			'waterinneu_feature_organisation',
			'waterinneu_feature_projects',
			'waterinneu_roles_and_permissions',
			'waterinneu_feature_tools',
	);
	module_enable($modules_to_enable,TRUE);
}